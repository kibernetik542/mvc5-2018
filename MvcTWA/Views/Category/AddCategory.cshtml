
@{
    ViewBag.Title = "Add Category";
}

@using MvcTWA.Models

<div class="panel panel-info">
    <div class="panel-heading">
        <h1 class="text-center">Add New Category</h1>
    </div>
    <div class="panel-body">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <form class="form-group" action="@Url.Action("AddCategory")" method="POST"
                  enctype="multipart/form-data">
                <input class="form-control" type="type" name="CategoryName"
                       placeholder="Category Name" />
                <br />
                <input class="form-control" type="text" name="Description"
                       placeholder="Description" />
                <br />               
                <br />
                <button class="btn btn-success" id="btnsave" type="submit">
                    <i class="fa fa-save"></i>&nbsp;Save
                </button>
            </form>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <img class="img-responsive center-block"
                 src="https://blogs.ntu.edu.sg/files/2014/07/change_default_category.jpg"
                 alt=".." />
        </div>
    </div>
    <div class="panel-footer">
        <a class="btn btn-block btn-default" href="@Url.Action("Index")">
            <i class="fa fa-backward"></i>&nbsp;Back to Category List
        </a>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("#btnsave").click(function () {
                toastr.success("Message", "Succesfully saved!");
            });
        });
    </script>
}


