@{
    ViewBag.Title = "Index";
}



<div class="header">
    <div class="panel panel-default">
        <div class="panel-heading" style="background-color:green;color:white;">
            <h1 class="text-center">MVC5 Project with full functionality</h1>
        </div>
        <div class="panel-body">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    <div class="item active">
                        <img src="http://www.elementcode.com/media/1043/capabilities-website-application-development_1600x500.png?anchor=center&mode=crop&width=1140&height=600&rnd=131230947400000000"
                             class="img-responsive center-block" alt="..">
                    </div>

                    <div class="item">
                        <img src="https://2ch.hk/pr/arch/2016-12-19/src/873899/14799170628890.jpg" alt=".." class="img-responsive center-block">
                    </div>

                    <div class="item">
                        <img src="http://www.xrmarchitects.com/media/1087/dev-banner.png?center=0.71276595744680848,0.66&mode=crop&width=1140&height=600&rnd=131396709890000000"
                             class="img-responsive center-block" alt="..">
                    </div>


                </div>


            </div>
        </div>
        <div class="panel-footer">
            <button class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal">
                Click to show more about this project !!!
            </button>
            <br />
            <p class="text-center">&copy; Copyright reserved 2018</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">
                        <b>
                            Welcome dear friend!!
                        </b>
                    </h2>
                </div>
                <div class="modal-body">
                    <ul class="alert alert-info" id="features">
                        <li>Async &amp; Await functionality</li>
                        <li>Full Crud Operation</li>
                        <li>Full Responsive site</li>
                        <li>Clean and maintaniable code</li>
                        <li>Paging, Sorting and Search funtionality</li>                        
                    </ul>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>*@
            </div>
        </div>
    </div>
</div>

<style>
    ul#features li {
        list-style: none;
        text-align: center;
        font-size: 22px;
        font-weight: bold;
    }
</style>


